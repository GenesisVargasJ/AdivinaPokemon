<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010000"
    android:padding="20dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Juego para adivinar el pokemon escribiendo su nombre, cuenta con 3 intentos para ganar.\n\nEste fue mi parcial de la clase de android :P"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed By: Genesis Vargas J"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:gravity="center"
        android:textSize="15sp" />
</LinearLayout>